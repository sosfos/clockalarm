#:import AnchorLayout kivy.uix.anchorlayout.AnchorLayout
#:import BoxLayout kivy.uix.boxlayout.BoxLayout
#:import Label kivy.uix.label.Label
#:import RelativeLayout kivy.uix.relativelayout.RelativeLayout
#:import Widget kivy.uix.widget.Widget

<AlarmIcon@AnchorLayout>:
    image:_alarm_image
    anchor_x:'left'
    anchor_y:'center'
    Image:
        id:_alarm_image
        source:'alarm.png'
        size_hint:None,None
        height:40
        width:40
        y:root.y + (root.height - self.height)/2

<AlarmLabel@AnchorLayout>:
    label:_alarm_label
    anchor_x:'left'
    anchor_y:'center'
    Label:
        id:_alarm_label
        text:'__:__'
        size_hint:None,None
        height:40
        width:40

<AlarmWidget>:

<AlarmLeft@AlarmWidget>:
    alarm_image:_alarm_icon
    alarm_label:_alarm_label

    size_hint:None,None
    height:40
    
    AlarmIcon:
        id:_alarm_icon
    AlarmLabel:
        id:_alarm_label
    

<AlarmRight@AlarmWidget>:
    alarm_image:_alarm_icon
    alarm_label:_alarm_label

    size_hint:None,None
    height:40
        
    AlarmLabel:
        id:_alarm_label
    AlarmIcon:
        id:_alarm_icon
            
<NowWidget>:
    text:''
    font_size:300
    size_hint:None,None
    height:40
    width:80


<ClockWidget>:
    alarm_1:_a1
    alarm_2:_a2
    alarm_3:_a3
    alarm_4:_a4
    
    opacity:0.3
    AlarmLeft:
        id:_a1
        x:0
        y:root.height - self.height
    AlarmLeft:
        id:_a2
        x:0
        y:0
    AlarmRight:
        id:_a3
        x:root.width - self.width
        y:root.height - self.height
    AlarmRight:
        id:_a4
        x:root.width - self.width
        y:0
    
    NowWidget:
        id:_clock
        x:(root.width - self.width)/2
        y:(root.height - self.height)/2
        
        
<AlarmEditor>:
    input_hour:_input_hour
    input_minute:_input_minute
    button_ok:_button_ok
    
    orientation:'vertical'
    opacity:1
    TextInput:
        id:_input_hour
    TextInput:
        id:_input_minute
    Button:
        id:_button_ok
        text:'OK'
        on_press:root.button_ok_down()
        