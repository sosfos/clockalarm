#:import AnchorLayout kivy.uix.anchorlayout.AnchorLayout
#:import BoxLayout kivy.uix.boxlayout.BoxLayout
#:import Label kivy.uix.label.Label
#:import RelativeLayout kivy.uix.relativelayout.RelativeLayout
#:import Widget kivy.uix.widget.Widget

<AlarmIcon@AnchorLayout>:
    image:_alarm_image
    anchor_x:'left'
    anchor_y:'center'
    Image:
        id:_alarm_image
        source:'alarm.png'
        size_hint:None,None
        height:60
        width:60
        y:root.y + (root.height - self.height)/2

<AlarmLabel@AnchorLayout>:
    label:_alarm_label
    anchor_x:'left'
    anchor_y:'center'
    Label:
        id:_alarm_label
        text:'__:__'
        size_hint:None,None
        height:60
        width:60
        font_size:40

<AlarmWidget>:
    size_hint:None,None
    height:80
    width:145

<AlarmLeft@AlarmWidget>:
    alarm_image:_alarm_icon
    alarm_label:_alarm_label
    
    AlarmIcon:
        id:_alarm_icon
    AlarmLabel:
        id:_alarm_label
    

<AlarmRight@AlarmWidget>:
    alarm_image:_alarm_icon
    alarm_label:_alarm_label

    AlarmLabel:
        id:_alarm_label
    AlarmIcon:
        id:_alarm_icon
            
<NowWidget>:
    text:''
    font_size:260
    size_hint:None,None
    height:40
    width:80


<ClockWidget>:
    alarm_1:a1
    alarm_2:a2
    alarm_3:a3
    alarm_4:a4
    clock:_clock
    
    opacity:0.3
    AlarmLeft:
        id:a1
        x:0
        y:root.height - self.height
    AlarmLeft:
        id:a2
        x:0
        y:0
    AlarmRight:
        id:a3
        x:root.width - self.width
        y:root.height - self.height
    AlarmRight:
        id:a4
        x:root.width - self.width
        y:0
    
    NowWidget:
        id:_clock
        x:(root.width - self.width)/2
        y:(root.height - self.height)/2
        
        
<AlarmEditor>:
    time_picker:_time_picker
    button_ok:_button_ok
    button_enable:_button_enable
    
    orientation:'vertical'
    size_hint:1,1
    x:0
    y:0

    CircularTimePicker:
        id:_time_picker
        size_hint:1,1
        
    BoxLayout:
        size_hint:1,None
        height:100
        Button:
            text:"Cancel"
            on_press:root.button_cancel_down()
            
        Switch:
            id:_button_enable
            text:'Enable'
            
        Button:
            id:_button_ok
            
            text:'OK'
            on_press:root.button_ok_down()
        
<PopupMessage>:
    opacity:0
    size_hint:.8,None
    height:80
    text:''
    x:(app.root.width - self.width)/2
    y:0
    